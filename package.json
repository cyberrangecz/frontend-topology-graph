{
    "name": "topology-graph",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve --ssl",
        "api": "json-server -w src/json-server/db.json -r src/json-server/routes.json",
        "test": "ng test",
        "lint": "ng lint && npm run prettier-check",
        "prettier-check": "prettier --check \"projects/**/*.ts\"",
        "prettier-fix": "prettier --write \"./projects/**/*.ts\"",
        "ci-test": "ng test --browsers ChromeHeadless --watch=false",
        "build-library": "ng build topology-graph --configuration production",
        "build-example-app": "ng build topology-graph-example --configuration production",
        "copy-static-files": "cp LICENSE dist/topology-graph && echo \"\n---\nSources: $(git remote get-url origin)\" >> dist/topology-graph/README.md",
        "create-package": "cd dist/topology-graph && npm pack",
        "build-and-pack": "npm install && npm run build-library && npm run copy-static-files && npm run create-package",
        "ci-update-version": "cd projects/topology-graph/ && npm version $TAG_VERSION",
        "ci-build-and-pack": "npm ci --cache .npm --prefer-offline && npm run build-library && npm run copy-static-files && npm run create-package",
        "ci-publish-package": "cd dist/topology-graph && npm publish --provenance=false --access public"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "dependencies": {
        "@angular/animations": "^18.2.13",
        "@angular/cdk": "^18.2.14",
        "@angular/common": "^18.2.13",
        "@angular/compiler": "^18.2.13",
        "@angular/core": "^18.2.13",
        "@angular/forms": "^18.2.13",
        "@angular/material": "^18.2.13",
        "@angular/platform-browser": "^18.2.13",
        "@angular/platform-browser-dynamic": "^18.2.13",
        "@angular/router": "^18.2.13",
        "@sentinel/common": "^18.0.4",
        "@sentinel/components": "^18.2.7",
        "@sentinel/layout": "^18.1.4",
        "@crczp/topology-graph-model": "^0.0.2",
        "@crczp/theme": "^0.0.3",
        "@sentinel/auth": "^18.0.3",
        "angular-oauth2-oidc": "^17.0.2",
        "angular-oauth2-oidc-jwks": "^17.0.2",
        "core-js": "^3.40.0",
        "d3": "^7.9.0",
        "moment-mini": "^2.29.4",
        "rxjs": "^7.8.1",
        "tslib": "^2.7.0",
        "typescript-collections": "^1.3.3",
        "zone.js": "^0.14.10"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^18.2.14",
        "@angular-eslint/builder": "^18.4.3",
        "@angular-eslint/eslint-plugin": "^18.4.3",
        "@angular-eslint/eslint-plugin-template": "^18.4.3",
        "@angular-eslint/schematics": "^18.4.3",
        "@angular-eslint/template-parser": "^18.4.3",
        "@angular/cli": "^18.2.14",
        "@angular/compiler-cli": "^18.2.13",
        "@angular/language-service": "^18.2.13",
        "@types/d3": "^7.4.3",
        "@types/jasmine": "^5.1.4",
        "@types/jasminewd2": "^2.0.13",
        "@types/node": "^22.6.1",
        "@typescript-eslint/eslint-plugin": "^8.24.0",
        "@typescript-eslint/parser": "^8.24.0",
        "eslint": "^9.20.0",
        "husky": "^9.1.7",
        "jasmine-core": "^5.3.0",
        "jasmine-spec-reporter": "^7.0.0",
        "json-server": "^0.17.4",
        "karma": "^6.4.4",
        "karma-chrome-launcher": "^3.2.0",
        "karma-coverage-istanbul-reporter": "^3.0.3",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.1.0",
        "ng-packagr": "^18.2.1",
        "prettier": "^3.5.0",
        "protractor": "~7.0.0",
        "ts-node": "^10.9.2",
        "typescript": "5.5.4"
    }
}
